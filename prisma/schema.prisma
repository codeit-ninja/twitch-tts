// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model User {
    id                  Int        @id @default(sequence())
    username            String     @unique
    password            String
    email               String     @unique
    TtsConfig           TtsConfig?
    UserTwitchTokenData UserTwitchTokenData?
}

model UserTwitchTokenData {
    user                User        @relation(fields: [userId], references: [id])
    userId              Int         @unique
    accessToken         String
    expiresIn           Int?        
    obtainmentTimestamp BigInt      @db.Int8
    refreshToken        String?
    scope               String[]
}

model TtsConfig {
    id          Int     @id @default(sequence())
    user        User    @relation(fields: [userId], references: [id])
    userId      Int     @unique
    enabled     Boolean
    channel     String
    voice       Json
    engine      String
}
